<!-- This input file tests the batch reactor's preference setting. The source
facility provides 1 unit of commodity each time period. If the batch reactor
is not in process, it will request one unit of commodity and trump the sink
facility. Otherwise, the sink facility should procure all other units of
commodity. -->

<simulation>
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec>
      <lib>cycaless</lib>
      <name>Source</name>
    </spec>
    <spec>
      <lib>cycaless</lib>
      <name>BatchReactor</name>
    </spec>
    <spec>
      <lib>cycaless</lib>
      <name>Sink</name>
    </spec>
    <spec>
      <lib>agents</lib>
      <name>NullRegion</name>
    </spec>
    <spec>
      <lib>agents</lib>
      <name>NullInst</name>
    </spec>
  </archetypes>

  <facility>
    <name>Source</name>
    <config>
      <Source>
        <out_commod>used_commodity</out_commod>
        <capacity>1</capacity>
        <recipe_name>commod_recipe</recipe_name>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Reactor</name>
    <config>
      <BatchReactor>
        <fuel>
          <incommodity>used_commodity</incommodity>
          <inrecipe>commod_recipe</inrecipe>
          <outcommodity>processed_commodity</outcommodity>
          <outrecipe>commod_recipe</outrecipe>
        </fuel>
        <processtime>1</processtime>
        <nbatches>1</nbatches>
        <batchsize>1</batchsize>
        <commodity_production>
          <commodity>power</commodity>
          <capacity>10</capacity>
          <cost>10</cost>
        </commodity_production>
        <commod_pref>
          <incommodity>used_commodity</incommodity>
          <preference>1.0</preference>
        </commod_pref>
      </BatchReactor>
    </config>
  </facility>

  <facility>
    <name>Sink</name>
    <config>
      <Sink>
        <in_commods>
          <val>used_commodity</val>
          <val>processed_commodity</val>
        </in_commods>
        <capacity>2</capacity>
      </Sink>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <config><NullRegion/></config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Reactor</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <config><NullInst/></config>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
